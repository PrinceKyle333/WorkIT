<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_student"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.workit.workit.ui.theme.student.StudentHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_student_home">
        <action
            android:id="@+id/action_nav_home_to_job_details"
            app:destination="@id/job_details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/job_details_fragment"
        android:name="com.workit.workit.ui.theme.student.JobDetailsFragment"
        android:label="Job Details"
        tools:layout="@layout/fragment_job_details" />

    <fragment
        android:id="@+id/nav_match"
        android:name="com.workit.workit.ui.theme.student.StudentMatchFragment"
        android:label="Match"
        tools:layout="@layout/fragment_student_match" />

    <fragment
        android:id="@+id/nav_notification"
        android:name="com.workit.workit.ui.theme.student.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_student_match" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.workit.workit.ui.theme.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>