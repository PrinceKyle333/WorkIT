<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- =========== COLLAPSED VIEW =========== -->
    <LinearLayout
        android:id="@+id/collapsed_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="8dp"
        android:padding="12dp">

        <!-- Job Image -->
        <ImageView
            android:id="@+id/iv_job_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray"
            android:layout_marginBottom="12dp" />

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_employer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employer Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Expand Indicator -->
            <ImageView
                android:id="@+id/iv_expand_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bell"
                android:tint="@color/gray"
                android:scaleType="centerInside"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Job Details Row 1: Position -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_briefcase"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="12sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Job Details Row 2: Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="12sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Job Details Row 3: Shift -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_bell"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift"
                android:textSize="12sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Tap to expand hint -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to expand"
            android:textSize="11sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- =========== EXPANDED VIEW =========== -->
    <ScrollView
        android:id="@+id/expanded_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_margin="8dp"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_position_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employer"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Description Preview -->
            <TextView
                android:id="@+id/tv_description_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short description..."
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.3" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="16dp" />

            <!-- Location Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_location_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="16dp" />

            <!-- Full Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Description"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_description_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full job description..."
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.3" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="16dp" />

            <!-- Requirements Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_requirements_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Requirement 1\n• Requirement 2\n• Requirement 3"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.5" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="16dp" />

            <!-- Shift Details Section -->
            <TextView
                android:id="@+id/tv_shift_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shift: Full-time"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

            <!-- Work Days Section (Optional) -->
            <TextView
                android:id="@+id/tv_work_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday - Friday"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="24dp" />

            <!-- Apply Button -->
            <Button
                android:id="@+id/btn_apply_expanded"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Apply Now"
                android:background="@drawable/bg_btn_green"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Close Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Close"
                android:background="@drawable/bg_btn_white"
                android:textColor="@color/green"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>