<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- =========== COLLAPSED VIEW =========== -->
        <LinearLayout
            android:id="@+id/collapsed_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Job Image with gradient overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/iv_job_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/light_gray" />

                <!-- Gradient overlay at bottom -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay" />

                <!-- Company info overlay on image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_employer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokal Kofi"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_location_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Davao, Mindanao"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:shadowColor="#80000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />
                </LinearLayout>
            </FrameLayout>

            <!-- Content below image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Hiring Badge and Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiring"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_hiring_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_time_posted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 hour ago"
                        android:textSize="11sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <!-- Position Title -->
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position: Cashier"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <!-- Shift Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_briefcase"
                        android:tint="@color/gray"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tv_shift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift: Monday 5:00 pm - 7:00 pm"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <!-- Location Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/gray"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Davao, Mindanao"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- =========== EXPANDED VIEW =========== -->
        <ScrollView
            android:id="@+id/expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Top Image Section (same as collapsed) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/iv_job_image_expanded"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/light_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_overlay" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_employer_expanded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokal Kofi"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_location_expanded_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: Davao, Mindanao"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:shadowColor="#80000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Expanded Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Hiring Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiring"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_hiring_badge"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Position -->
                    <TextView
                        android:id="@+id/tv_position_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position: Cashier"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <!-- Shift Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift: Monday 5:00 pm - 7:00 pm"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="12dp" />

                    <!-- Requirements Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requirements"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_requirements_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Resume (PDF)\n• COR (PDF)\n• Application Letter (PDF)"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="16dp" />

                    <!-- Full Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_description_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full job description here..."
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="24dp" />

                    <!-- Apply Button -->
                    <Button
                        android:id="@+id/btn_apply_expanded"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Apply Now"
                        android:background="@drawable/bg_btn_green"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.cardview.widget.CardView>