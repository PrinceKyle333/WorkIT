<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:paddingBottom="48dp">

        <!-- Logo -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/workit_logo"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="32dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Sign Up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="32dp" />

        <!-- Name Fields Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- First Name -->
            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="First Name"
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginEnd="6dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:visibility="gone" />

            <!-- Middle Name -->
            <EditText
                android:id="@+id/et_middle_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Middle Name"
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginStart="6dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Last Name and Ext Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Last Name -->
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:hint="Last Name"
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginEnd="6dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:visibility="gone" />

            <!-- Ext. Name -->
            <EditText
                android:id="@+id/et_ext_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Ext."
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginStart="6dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:visibility="gone" />
        </LinearLayout>

        <!-- IP Number -->
        <EditText
            android:id="@+id/et_ip_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="IP Number"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:visibility="gone" />

        <!-- Program -->
        <EditText
            android:id="@+id/et_program"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Program"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:visibility="gone" />

        <!-- Username -->
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Username"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:visibility="gone" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Address -->
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Address"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPostalAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:visibility="gone" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Vacant Schedule Section (for signup) -->
        <LinearLayout
            android:id="@+id/schedule_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Vacant Schedule"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your available time slots for work"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                android:layout_marginBottom="12dp" />

            <!-- Time Slots Container -->
            <LinearLayout
                android:id="@+id/time_slots_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp" />

            <!-- Add Time Slot Button -->
            <Button
                android:id="@+id/btn_add_time_slot"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="+ Add Time Slot"
                android:background="@drawable/bg_btn_blue"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Login Button (used for both login and signup) -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login"
            android:background="@drawable/bg_btn_green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Toggle Mode Link -->
        <TextView
            android:id="@+id/tv_toggle_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account? Sign Up"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>