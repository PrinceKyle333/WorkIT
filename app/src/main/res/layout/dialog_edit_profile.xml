<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Name Fields Row -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Information"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/et_edit_first_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="First Name"
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginEnd="6dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/et_edit_middle_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Middle Name"
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginStart="6dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_edit_last_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:hint="Last Name"
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginEnd="6dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/et_edit_ext_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Ext."
                android:background="@drawable/bg_edit_text"
                android:padding="12dp"
                android:layout_marginStart="6dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <!-- Account Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/et_edit_ip_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="IP Number"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/et_edit_program"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Program"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/et_edit_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Username"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Contact Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/et_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Phone Number"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/et_edit_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Address"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Vacant Schedule Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacant Schedule"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit your available time slots for work"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="12dp" />

        <!-- Time Slots Container -->
        <LinearLayout
            android:id="@+id/edit_time_slots_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp" />

        <!-- Add Time Slot Button -->
        <Button
            android:id="@+id/btn_edit_add_time_slot"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="+ Add Time Slot"
            android:background="@drawable/bg_btn_blue"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>