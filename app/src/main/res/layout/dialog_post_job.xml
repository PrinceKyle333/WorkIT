<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Position Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position *"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_position"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Location Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location *"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Description Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description *"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Shift Times Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Shift Start Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shift Start"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/et_shift_start"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="HH:MM"
                    android:background="@drawable/bg_edit_text"
                    android:padding="12dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"
                    android:cursorVisible="false" />
            </LinearLayout>

            <!-- Shift End Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shift End"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/et_shift_end"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="HH:MM"
                    android:background="@drawable/bg_edit_text"
                    android:padding="12dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:focusable="false"
                    android:cursorVisible="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Requirements Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirements (comma separated)"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_requirements"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="e.g. Bachelor's degree, 2+ years experience"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <!-- Post Button -->
        <Button
            android:id="@+id/btn_post_dialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Post Job"
            android:background="@drawable/bg_btn_green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>