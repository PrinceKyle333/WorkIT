<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Job Image -->
        <ImageView
            android:id="@+id/iv_job_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray" />

        <!-- Job Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Position -->
            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="8dp" />

            <!-- Shift -->
            <TextView
                android:id="@+id/tv_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

            <!-- Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp"
                android:lineSpacingMultiplier="1.3" />

            <!-- Requirements Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="24dp"
                android:lineSpacingMultiplier="1.5" />

            <!-- Documents Upload Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Required Documents"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <!-- Resume Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_select_resume"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Select Resume (PDF)"
                    android:background="@drawable/bg_edit_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_resume_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- COR Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_select_cor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Select Certificate of Registration (PDF)"
                    android:background="@drawable/bg_edit_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cor_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Application Letter Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_select_application_letter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Select Application Letter (PDF)"
                    android:background="@drawable/bg_edit_text"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_application_letter_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Apply Button -->
            <Button
                android:id="@+id/btn_apply"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Apply Now"
                android:background="@drawable/bg_btn_green"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>